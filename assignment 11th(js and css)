javascript code!

function convert(){
    let firstname=(document.getElementById("firstname").value)
    let result=document.getElementById("result")
    result.innerHTML=firstname;

    let lastname=(document.getElementById("lastname").value)
    let result1=document.getElementById("result1")
    result1.innerHTML=lastname;

    let address=(document.getElementById("address").value)
    let result2=document.getElementById("result2")
    result2.innerHTML=address;

    let pincode=(document.getElementById("pincode").value)
    let result3=document.getElementById("result3")
    result3.innerHTML=pincode;
    
    let gender=(document.getElementById("gender").value)
    let result4=document.getElementById("result4")
    result4.innerHTML=gender;

    let food=(document.getElementById("food").value)
    let result5=document.getElementById("result5")
    result5.innerHTML=food;

    let state=(document.getElementById("state").value)
    let result6=document.getElementById("result6")
    result6.innerHTML=state;

    let country=(document.getElementById("country").value)
    let result7=document.getElementById("result7")
    result7.innerHTML=country;
    
}

firstname.reset();
lastname.reset();
address.reset();
pincode.reset();
gender.reset();
food.reset();
state.reset();
country.reset();


